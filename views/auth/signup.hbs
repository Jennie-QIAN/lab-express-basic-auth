<form action="/signup" method="POST">
    <label>
        Username
        <input type="text" name="username">
    </label>

    <label>
        Email
        <input type="email" name="email">
    </label>

    <label>
        Password
        <input type="text" name="password">
    </label>

    <button type="submit">Signup</button>

    {{#if errorMessage}}
        <p>{{errorMessage}}</p>
    {{/if}}
</form>